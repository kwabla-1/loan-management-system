if ($allBorrowers) {
    foreach ($allBorrowers as $key => $value) {
        $borrowerID = $value['b_id'];
        echo "<tr class='customer__table-body-row'>";
            echo "<td>{$value['b_fullname']}</td>";
            echo "<td>{$value['b_businesstype']}</td>";
            echo "<td>{$value['b_businessLocation']}</td>";
            echo "<td>{$value['b_contact']}</td>";
            echo "<td>{$value['disbursmentMode']}</td>";
            echo "<td>{$value['amountRequested']}</td>";
            // echo "
            //         <input type='hidden' name='borrowerID' value='$borrowerID'>
            //     ";
            echo "
            <td data-label='status'>
                <a href='app.php?borrowerID=$borrowerID' class='status danger link_clear'>Reject</a>
                <a href='#' class='status ontime link_clear recommendButtom' id='$borrowerID'>Recommend</a>
            </td>
            ";

        echo "</tr>"; 
    }
}else {
    echo "<h1>No Borrowers for now</h1>";
}


